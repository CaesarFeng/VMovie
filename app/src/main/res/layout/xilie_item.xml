<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:id="@+id/img_xilie"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/title_xilie"
        android:layout_below="@id/img_xilie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="Title"/>
    <TextView
        android:id="@+id/updata_to_xilie"
        android:layout_below="@id/title_xilie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title_xilie"
        android:textColor="#545454"
        android:text="已更新X集"/>
    <TextView
        android:id="@+id/count_xilie"
        android:layout_below="@id/title_xilie"
        android:layout_toRightOf="@id/updata_to_xilie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textColor="#545454"
        android:text="X人已订阅"/>
    <TextView
        android:id="@+id/content_xilie"
        android:layout_below="@id/updata_to_xilie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="30dp"
        android:layout_alignLeft="@id/title_xilie"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="X人已订阅"/>
</RelativeLayout>