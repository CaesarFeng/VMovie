<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/view_header_home_new"
                android:layout_width="match_parent"
                android:layout_height="200dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_Home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/rg_home_new_header"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/rb1_home_new_header"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_new_header"/>
        <RadioButton
            android:id="@+id/rb2_home_new_header"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:drawableTop="@drawable/home_new_header"/>
        <RadioButton
            android:id="@+id/rb3_home_new_header"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:drawableTop="@drawable/home_new_header"/>
        <RadioButton
            android:id="@+id/rb4_home_new_header"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:drawableTop="@drawable/home_new_header"/>
        <RadioButton
            android:id="@+id/rb5_home_new_header"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:drawableTop="@drawable/home_new_header"/>
        <RadioButton
            android:id="@+id/rb6_home_new_header"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:drawableTop="@drawable/home_new_header"/>
        <RadioButton
            android:id="@+id/rb7_home_new_header"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginLeft="10dp"
            android:drawableTop="@drawable/home_new_header"/>
    </RadioGroup>

</RelativeLayout>