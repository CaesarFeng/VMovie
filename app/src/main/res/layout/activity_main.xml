<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#000000"
    tools:context="com.jb.caesarfeng.vmovie.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#000">

            <ImageView
                android:id="@+id/menu_main"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:padding="6dp"
                android:src="@mipmap/home_side"/>

            <TextView
                android:id="@+id/title_xilei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="系列"
                android:textColor="#fff"
                android:textSize="16sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/title_muhou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="幕后文章"
                android:textColor="#fff"
                android:textSize="16sp"
                android:visibility="gone"/>
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                >
                <android.support.design.widget.TabLayout
                    android:id="@+id/tabLayout"
                    android:visibility="visible"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:tabIndicatorColor="#ffffff"
                    app:tabSelectedTextColor="#ffffff"
                    app:tabTextColor="#b1b1b1" ></android.support.design.widget.TabLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/search_main"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:padding="6dp"
                android:src="@mipmap/home_search"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_below="@id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v4.view.ViewPager>
    <FrameLayout
        android:id="@+id/fl"
        android:visibility="gone"
        android:layout_below="@id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <RelativeLayout
        android:id="@+id/menu_rl_main"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/slide_bg">

        <ImageView
            android:id="@+id/touxiang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/load_tv"
            android:layout_below="@id/touxiang"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="点击登录"/>
        <ImageView
            android:layout_toLeftOf="@id/touxiang"
            android:layout_marginTop="115dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/side_set"/>
        <ImageView
            android:layout_toRightOf="@id/touxiang"
            android:layout_marginTop="115dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/side_message"/>

        <ImageView
            android:id="@+id/menu_close"
            android:onClick="onClick"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="50dp"
            android:src="@mipmap/side_close"/>
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_below="@id/load_tv"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RadioButton
                android:button="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/details_cache"
                android:text="我的缓存"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:background="#848484"/>
            <RadioButton
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/details_like"
                android:text="我喜欢的"/>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/menu_rg"
            android:layout_below="@id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/side_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                android:drawableLeft="@drawable/side_home_selector"
                android:background="@drawable/side_rb_selector"
                android:checked="true"
                android:drawablePadding="15dp"
                android:text="首页"
                android:textColor="@drawable/side_textcolor"/>
            <RadioButton
                android:id="@+id/side_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                android:button="@null"
                android:drawableLeft="@drawable/side_series_selector"
                android:drawablePadding="15dp"
                android:background="@drawable/side_rb_selector"
                android:text="系列"
                android:textColor="@drawable/side_textcolor"/>
            <RadioButton
                android:id="@+id/side_behind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                android:button="@null"
                android:drawableLeft="@drawable/side_behind_selector"
                android:drawablePadding="15dp"
                android:background="@drawable/side_rb_selector"
                android:text="幕后"
                android:textColor="@drawable/side_textcolor"/>

        </RadioGroup>
        <View
            android:id="@+id/gb_view1"
            android:layout_width="2dp"
            android:layout_height="45dp"
            android:layout_below="@id/ll_1"
            android:background="#fff"/>
        <View
            android:id="@+id/gb_view2"
            android:layout_width="2dp"
            android:layout_height="45dp"
            android:layout_below="@id/gb_view1"
            android:visibility="invisible"
            android:background="#fff"/>
        <View
            android:id="@+id/gb_view3"
            android:layout_width="2dp"
            android:layout_height="45dp"
            android:layout_below="@id/gb_view2"
            android:visibility="invisible"
            android:background="#fff"/>
    </RelativeLayout>

</RelativeLayout>
